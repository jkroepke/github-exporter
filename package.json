{
  "name": "github_exporter",
  "version": "1.4.2",
  "description": "Export various metrics including insights about github repositories",
  "main": "index.js",
  "scripts": {
    "start": "./index.js",
    "lint": "standard | snazzy",
    "format": "standard --fix",
    "cm": "npx git-cz",
    "test": "npm run test:unit",
    "test:unit": "mocha",
    "test:integration": "echo",
    "coverage": "npm run coverage:unit && npm run coverage:integration && npm run coverage:report",
    "coverage:unit": "nyc --silent npm run test:unit",
    "coverage:integration": "nyc --silent --no-clean npm run test:integration",
    "coverage:report": "nyc report --reporter=lcov --reporter=text"
  },
  "files": [
    "index.js",
    "lib/**/*.js",
    "templates/**"
  ],
  "bin": "index.js",
  "repository": {
    "type": "git",
    "url": "github:jkroepke/github_exporter.git"
  },
  "engines": {
    "node": ">= 8"
  },
  "keywords": [
    "github",
    "prometheus",
    "metrics",
    "insights",
    "traffic",
    "git",
    "exporter",
    "statistics"
  ],
  "author": {
    "name": "Jan-Otto Kr√∂pke",
    "email": "npm@jkropke.de",
    "url": "https://github.com/jkroepke/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jkroepke/github_exporter/issues"
  },
  "homepage": "https://github.com/jkroepke/github_exporter#readme",
  "dependencies": {
    "@octokit/graphql": "^4.5.7",
    "@octokit/rest": "^18.0.9",
    "dotenv": "^8.2.0",
    "prom-client": "^12.0.0",
    "winston": "^3.3.3",
    "yargs": "^16.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "semantic-release": "^17.3.0",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
